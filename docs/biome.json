{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "jsxQuoteStyle": "single"
    }
  },
  "files": {
    "includes": [
      "**/*.astro",
      "**/*.{js,jsx,ts,tsx,json}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/.astro/**"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "formatter": {
        "enabled": true
      }
    }
  ]
}
